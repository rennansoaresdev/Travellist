<div class="card">
  <div class="card-header">
    <h1>Nova passagem</h1>
  </div>
  <div class="card-body">
    <%= simple_form_for [@trip, @ticket] do |form| %>
      <%= form.error_notification %>

      <%= form.input :url %>
      <%= form.input :start_time,
                     as: :string,
                     label_html: { class: "text-secondary" },
                     input_html: { data: { controller: "flatpickr" } }  %>
      <%= form.input :end_time,
                     as: :string,
                     label_html: { class: "text-secondary" },
                     input_html: { data: { controller: "flatpickr" } }  %>
      <%= form.input :origin %>
      <%= form.input :destination %>
      <%= form.input :seat, required: false %>
      <%= form.input :gate, required: false %>
      <%= form.input :price %>
      <%= form.input :company_name %>

      <div class="actions">
        <%= form.button :submit, "Adicionar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
