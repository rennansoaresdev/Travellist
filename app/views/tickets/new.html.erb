<div class="container-sm">
  <%= link_to request.referer do %>
    <i class="fa-solid fa-arrow-left btn-grey-round btn-back"></i>
  <% end %>
  <div class="session-form">
    <div class="banner-form-ticket">

      <h2 class="text-center">Nova passagem</h2>

      <%= simple_form_for [@trip, @ticket] do |form| %>
        <%= form.error_notification %>

        <%= form.input :url %>
        <%= form.input :start_time,
                      as: :string,
                      label_html: { class: "text-secondary" },
                      input_html: { data: { controller: "flatpickr" } }  %>
        <%= form.input :end_time,
                      as: :string,
                      label_html: { class: "text-secondary" },
                      input_html: { data: { controller: "flatpickr" } }  %>
        <%= form.input :origin %>
        <%= form.input :destination %>
        <%= form.input :seat, required: false %>
        <%= form.input :gate, required: false %>
        <%= form.input :price %>
        <%= form.input :company_name %>

        <div class="form-actions-ticket">
          <%= form.button :submit, "Adicionar", class: "button-lg-login" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
