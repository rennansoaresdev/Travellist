<div class="card">
  <div class="card-header">
    <h1>Editar acomodação Ticket</h1>
  </div>
  <div class="card-body">
    <%= simple_form_for(@accommodation) do |form| %>
      <%= form.error_notification %>
      <%= form.input :url %>
      <%= form.input :checkin_time %>
      <%= form.input :checkou_time %>
      <%= form.input :type %>
      <%= form.input :capacity %>
      <%= form.input :price %>
      <%= form.input :name%>
      <%= form.input :address %>
      <div class="actions">
        <%= form.button :submit, "Update Accommodation", class: "btn btn-primary" %>
        <%= link_to "voltar para detalhes", @accommodation, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
