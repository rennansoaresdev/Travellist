<div class="container w-25 mt-3">
  <div class="card p-4 border-0 rounded-5 shadow">
    <h1 class="text-center my-3">Alterar dados</h1>

    <%= simple_form_for @trip do |f| %>
      <%= f.input :name,
                  label: 'Novo nome:' %>
      <%= f.input :destination,
                  label: 'Alterar destino:' %>
      <%= f.input :start_date,
                  label: 'Data de ida:',
                  start_year: Date.today.year %>
      <%= f.input :end_date,
                  label: 'Data de volta:',
                  start_year: Date.today.year %>
      <%= f.input :budget_per_user,
                  label: 'Gasto por viajante:',
                  hint: 'Caso queira, pode deixar em branco! ðŸ˜‰' %>
      <div class="row">
        <%= f.submit class: 'btn btn-primary rounded-5' %>
      </div>
    <% end %>
  </div>
</div>
