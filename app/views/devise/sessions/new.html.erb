<div class="container-form">
  <div class="row session-form">
    <div class="banner-form-login">
      <h2>Entrar</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: "E-mail",
                        required: false,
                        placeholder: "team@travellist.com",
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: "Senha",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me,
                        label: "Lembrar-me",
                         as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Entrar", class:"button-lg-login"%>

              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Registrar", new_registration_path(resource_name), class:"btn button-lg"%><br />
              <% end %>
            </div>

            <div class="forgot-password">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Esqueci minha senha", new_password_path(resource_name) %><br />
              <% end %>
            </div>

            <% end %>
          <%= render "devise/shared/links" %>
        </div>
      <div>
    </div>
  </div>
</div>
